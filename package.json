{
  "name": "kaonashi",
  "version": "1.0.0",
  "description": "kaonashi",
  "main": "",
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "clean-report": "rimraf ./report",
    "clean-all": "yarn run clean-dist && yarn run clean-report",
    "create-dist": "mkdirp ./dist/js && mkdirp ./dist/css && mkdirp ./dist/resources/images",
    "refresh-dist": "yarn run clean-dist && yarn run create-dist",
    "copy-assets": "cpx ./src/index.html ./dist && cpx ./src/styles/app.css ./dist/css && cpx \"./src/resources/images/*.{png,svg}\" ./dist/resources/images",
    "lint": "tslint 'src/**/*.ts'",
    "build-dev": "yarn run refresh-dist && yarn run copy-assets && webpack --mode development",
    "build-dev-lint": "yarn run refresh-dist && yarn run copy-assets && yarn run lint && webpack --mode development",
    "build": "yarn run refresh-dist && yarn run copy-assets && webpack --mode production",
    "start": "yarn run build-dev && webpack-dev-server",
    "test": "yarn run clean-report && yarn run karma start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "vue": "^2.5.16",
    "vue-class-component": "^6.2.0",
    "vue-property-decorator": "^6.1.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.3.3",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.11",
    "html-loader": "^0.5.5",
    "jasmine": "^3.1.0",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.2",
    "karma-typescript": "^3.0.13",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "typescript": "^3.0.0",
    "vue-loader": "^15.2.4",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.7",
    "webpack-dev-server": "^3.1.4"
  }
}
