{
  "name": "kaonashi",
  "version": "1.0.0",
  "description": "kaonashi",
  "main": "",
  "scripts": {
    "clean": "rimraf ./dist",
    "create-dist": "mkdirp ./dist/js && mkdirp ./dist/css",
    "refresh-dist": "yarn run clean && yarn run create-dist",
    "copy-assets": "cpx ./src/index.html ./dist && cpx ./src/styles/app.css ./dist/css",
    "lint": "tslint 'src/**/*.ts'",
    "build-dev": "yarn run refresh-dist && yarn run copy-assets && webpack --mode development",
    "build-dev-lint": "yarn run refresh-dist && yarn run copy-assets && yarn run lint && webpack --mode development",
    "build": "yarn run refresh-dist && yarn run copy-assets && webpack --mode production",
    "start": "yarn run build-dev && webpack-dev-server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "vue": "^2.5.16",
    "vue-class-component": "^6.2.0",
    "vue-property-decorator": "^6.1.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.3.3",
    "cpx": "^1.5.0",
    "html-loader": "^0.5.5",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "vue-loader": "^15.2.4",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.7",
    "webpack-dev-server": "^3.1.4"
  }
}
